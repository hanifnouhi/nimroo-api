# ──────────────
# Root-level ignores
# ──────────────

# Node modules (اگر توی ریشه هم node_modules باشه)
node_modules/

# Compiled output (اگر توی ریشه یا جاهای دیگه باشد)
dist/
build/

# Env files - کلیه فایل‌های env در هر مسیر
.env
.env.*

# Logs
logs
*.log
npm-debug.log*
pnpm-debug.log*
yarn-debug.log*
yarn-error.log*

# OS files
.DS_Store

# Docker (اختیاری)
docker-compose.override.yml

# Temporary files
.temp
.tmp

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Diagnostic reports
report.[0-9]*.[0-9]*.[0-9]*.[0-9]*.json


# ──────────────
# nestjsApp ignores
# ──────────────

# node_modules در nestjsApp
nestjsApp/node_modules/

# dist فولدر در nestjsApp
nestjsApp/dist/

# Logs در nestjsApp
nestjsApp/logs/
nestjsApp/*.log

# VSCode settings (اختیاری)
nestjsApp/.vscode/*
!nestjsApp/.vscode/settings.json
!nestjsApp/.vscode/tasks.json
!nestjsApp/.vscode/launch.json
!nestjsApp/.vscode/extensions.json


# ──────────────
# spell-checker ignores
# ──────────────

# Python cache
spell-checker/__pycache__/
spell-checker/*.pyc
spell-checker/.pytest_cache/
spell-checker/.mypy_cache/

# Virtual environments (اگر استفاده می‌کنی)
spell-checker/venv/

# Logs
spell-checker/logs/
spell-checker/*.log


# ──────────────
# IDE/editor-specific ignores
# ──────────────

# JetBrains IDEs
.idea/
*.iml

# VSCode (global)
.vscode/
