{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testMatch": [
    "<rootDir>/src/**/tests/e2e/**/*.e2e-spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "preset": "ts-jest",
  "testEnvironment": "node",
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  }
}
